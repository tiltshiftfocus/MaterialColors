<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />

    <TextView
        android:id="@+id/chooseColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_bar"
        android:text="@string/choose"
        android:textSize="24sp" />

    <Spinner
        android:id="@+id/spinnerColors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/chooseColor"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerColors"
        android:layout_marginLeft="16dp"
        android:onClick="reCreate"
        android:text="Set!" />

    <View
        android:id="@+id/divider"
        android:layout_below="@id/button"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:background="@android:color/darker_gray"/>


    <Button
        android:id="@+id/button2"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider"
        android:layout_marginLeft="16dp"
        android:onClick="openFAB"
        android:text="FAB" />

    <Button
        android:id="@+id/button3"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button2"
        android:layout_marginLeft="16dp"
        android:onClick="circularImageView"
        android:text="CircularImageView" />

    <Button
        android:id="@+id/button4"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button3"
        android:layout_marginLeft="16dp"
        android:onClick="launchFragmentAct"
        android:text="FragmentActivity" />

    <Button
        android:id="@+id/button5"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button4"
        android:layout_marginLeft="16dp"
        android:onClick="openDrawerLayout"
        android:text="@string/drawer_layout" />

    <Button
        android:id="@+id/button6"
        android:layout_below="@id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="16dp"
        android:onClick="openCardListView"
        android:text="@string/card_recycler"/>

    <Button
        android:id="@+id/button7"
        android:layout_below="@id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="16dp"
        android:onClick="openViewPager"
        android:text="@string/view_pager_act"/>

</RelativeLayout>
